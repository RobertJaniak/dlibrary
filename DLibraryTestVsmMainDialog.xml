<dialog title="DLibrary Test VSM Dialog" help="True">
  <control>
    <tab-control>
      <tab-pane header="LIST ADMINISTRATION" layout="HORIZONTAL" data-context="list_administration">
        <control>
          <list-browser data-items="items" data-selected-items="selected_items" index="True" width="46">
            <column header="Column One" data-value="prop_one"/>
            <column header="Column Two" data-value="prop_two"/>
          </list-browser>
        </control>
        <control>
          <group-box>
            <control><static-text>SELECTED ITEM(S)</static-text></control>
            <control><static-text>Property One</static-text></control>
            <control><edit-text data-items="selected_items" data-value="prop_one" width="30"/></control>
            <control><static-text>Property Two</static-text></control>
            <control><edit-text data-items="selected_items" data-value="prop_two"/></control>
            <control><separator/></control>
            <control><static-text>NEW ITEM</static-text></control>
            <control><static-text>Property One</static-text></control>
            <control><edit-text data-context="new_item" data-value="prop_one"/></control>
            <control><static-text>Property Two</static-text></control>
            <control><edit-text data-context="new_item" data-value="prop_two"/></control>
            <control><button data-command="add_item" help="Property One is required!">Add New Item</button></control>
          </group-box>
        </control>
      </tab-pane>
      <tab-pane header="PREDEFINED DIALOGS" data-context="predefined_dialogs">
        <control><static-text>Text</static-text></control>
        <control><edit-text data-value="dialog_text"/></control>
        <control><static-text>Advice</static-text></control>
        <control><edit-text data-value="dialog_advice"/></control>
        <control>
          <group-box layout="HORIZONTAL">
            <control>
              <button data-command="show_alert_critical" help="Text is required!">Show critical alert</button>
            </control>
            <control>
              <button data-command="show_alert_warning" help="Text is required!">Show warning alert</button>
            </control>
            <control>
              <button data-command="show_alert_info" help="Text is required!">Show info alert</button>
            </control>
            <control>
              <button data-command="show_alert_success" help="Text is required!">Show success alert</button>
            </control>
          </group-box>
        </control>
        <control><separator/></control>
        <control>
          <button data-command="show_plugin_alert_vsexception">Show on plugin file VSException alert</button>
        </control>
        <control>
          <button data-command="show_plugin_alert_filenotfounderror">Show on plugin file FileNotFoundError alert</button>
        </control>
        <control>
          <button data-command="show_plugin_alert_permissionerror">Show on plugin file PermissionError alert</button>
        </control>
        <control>
          <button data-command="show_plugin_alert_oserrer">Show on plugin file OSError alert</button>
        </control>
      </tab-pane>
    </tab-control>
  </control>
</dialog>